<div class="tab-content {{#if (eq activeTab 'inventory')}}active{{/if}}">
    
    {{!-- WEAPONS --}}
    <h3>Weapons <a data-action="createItem" data-type="weapon"><i class="fa-solid fa-plus"></i></a></h3>
    <div class="item-list weapon-list">
        <div class="header-row">
            <span></span>
            <span>Name</span>
            <span class="center-text">Ammo</span>
            <span class="center-text">Dmg</span>
            <span></span>
        </div>
        {{#each inventory.weapons as |item|}}
        <div class="item-row">
            <div class="item-image"><img src="{{item.img}}" width="24" height="24"/></div>
            
            <a class="item-name" data-action="rollWeapon" data-id="{{item.id}}">{{item.name}}</a>
            
            <div class="center-text">
                {{#if item.system.ammo.max}}
                <small>{{item.system.ammo.value}} / {{item.system.ammo.max}}</small>
                {{else}}-{{/if}}
            </div>
            
            <div class="center-text">{{item.system.damage}}</div>
        
            <div class="item-controls">
                <a data-action="editItem" data-id="{{item.id}}"><i class="fa-solid fa-edit"></i></a>
                <a data-action="deleteItem" data-id="{{item.id}}"><i class="fa-solid fa-trash"></i></a>
            </div>
        </div>
        {{/each}}
    </div>

    {{!-- ARMOR --}}
    <h3>Armor <a data-action="createItem" data-type="armor"><i class="fa-solid fa-plus"></i></a></h3>
    <div class="item-list armor-list">
        <div class="header-row">
            <span></span>
            <span>Name</span>
            <span class="center-text">Soak</span>
            <span class="center-text">Equipped</span>
            <span></span>
        </div>
        {{#each inventory.armor as |item|}}
        <div class="item-row">
            <div class="item-image"><img src="{{item.img}}" width="24" height="24"/></div>
            
            <span class="item-name">{{item.name}}</span>
            
            <div class="center-text">{{item.system.soak}}</div>
            
            <div class="center-text">
                {{#if item.system.equipped}}
                    <i class="fas fa-check" style="color: var(--cw-success);" title="Equipped"></i>
                {{/if}}
            </div>
            
            <div class="item-controls">
                <a data-action="editItem" data-id="{{item.id}}"><i class="fa-solid fa-edit"></i></a>
                <a data-action="deleteItem" data-id="{{item.id}}"><i class="fa-solid fa-trash"></i></a>
            </div>
        </div>
        {{/each}}
    </div>

    {{!-- CYBERNETICS --}}
    <h3>Cybernetics <a data-action="createItem" data-type="cybernetic"><i class="fa-solid fa-plus"></i></a></h3>
    <div class="item-list cyber-list">
        <div class="header-row">
            <span></span>
            <span>Name</span>
            <span class="center-text">Load</span>
            <span></span>
        </div>
        {{#each inventory.cybernetics as |item|}}
        <div class="item-row">
            <div class="item-image"><img src="{{item.img}}" width="24" height="24"/></div>
            <span class="item-name">{{item.name}}</span>
            <div class="center-text">{{item.system.immuneLoad}}</div>
            <div class="item-controls">
                <a data-action="editItem" data-id="{{item.id}}"><i class="fa-solid fa-edit"></i></a>
                <a data-action="deleteItem" data-id="{{item.id}}"><i class="fa-solid fa-trash"></i></a>
            </div>
        </div>
        {{/each}}
    </div>

    {{!-- GEAR --}}
    <h3>Gear <a data-action="createItem" data-type="gear"><i class="fa-solid fa-plus"></i></a></h3>
    <div class="item-list gear-list">
        <div class="header-row">
            <span></span>
            <span>Name</span>
            <span></span>
        </div>
        {{#each inventory.gear as |item|}}
        <div class="item-row">
            <div class="item-image"><img src="{{item.img}}" width="24" height="24"/></div>
            <span class="item-name">{{item.name}}</span>
            <div class="item-controls">
                {{#if item.system.isConsumable}}
                <a data-action="useItem" data-id="{{item.id}}" title="Use Item"><i class="fa-solid fa-prescription-bottle-medical"></i></a>
                {{/if}}
                <a data-action="editItem" data-id="{{item.id}}"><i class="fa-solid fa-edit"></i></a>
                <a data-action="deleteItem" data-id="{{item.id}}"><i class="fa-solid fa-trash"></i></a>
            </div>
        </div>
        {{/each}}
    </div>
</div>