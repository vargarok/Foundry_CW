
<form class="cw {{cssClass}}">
  <header class="header-row">
    <div class="section" style="flex:1">
      <div class="grid2">
        <div>
          <label>Name</label>
          <input type="text" name="name" value="{{item.name}}"/>
        </div>
        <div>
          <label>Type</label>
          <span>{{item.type}}</span>
        </div>
      </div>
    </div>
  </header>

  <section class="section">
    <h2>Details</h2>
    <div class="grid3">
      <div class="attr"><span>Rating</span><input type="number" name="system.rating" value="{{system.rating}}"/></div>
      {{#if (eq item.type "weapon")}}
        <div class="attr"><span>Damage</span><input type="text" name="system.damage" value="{{system.damage}}"/></div>
        <div class="attr"><span>Range</span><input type="text" name="system.range" value="{{system.range}}"/></div>
      {{/if}}
      {{#if (eq item.type "armor")}}
        <div class="attr"><span>Soak</span><input type="number" name="system.soak" value="{{system.soak}}"/></div>
        <div class="attr"><span>Loc</span><input type="text" name="system.locations" value="{{system.locations}}"/></div>
      {{/if}}
    </div>
    <h3>Description</h3>
    {{editor system.description target="system.description" button=true owner=owner editable=editable}}
  </section>
</form>
